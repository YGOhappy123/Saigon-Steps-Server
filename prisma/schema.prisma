generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("SQL_DATABASE_URL")
}

enum CartStatus {
  ACTIVE    @map("active")
  CONVERTED @map("converted")
  ABANDONED @map("abandoned")
}

enum CouponType {
  FIXED      @map("fixed")
  PERCENTAGE @map("percentage")
}

enum OrderStatus {
  PENDING          @map("pending")
  ACCEPTED         @map("accepted")
  PACKED           @map("packed")
  DISPATCHED       @map("dispatched")
  DELIVERY_SUCCESS @map("delivery_success")
  DELIVERY_FAILED  @map("delivery_failed")
  CANCELLED        @map("cancelled")
  RETURNED         @map("returned")
}

enum InventoryDamageReason {
  LOST      @map("lost")
  BROKEN    @map("broken")
  DEFECTIVE @map("defective")
  OTHER     @map("other")
}
