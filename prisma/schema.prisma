generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("SQL_DATABASE_URL")
}

enum CartStatus {
  ACTIVE    @map("active")
  CONVERTED @map("converted")
  ABANDONED @map("abandoned")
}

enum CouponType {
  FIXED      @map("fixed")
  PERCENTAGE @map("percentage")
}

enum InventoryDamageReason {
  LOST      @map("lost")
  BROKEN    @map("broken")
  DEFECTIVE @map("defective")
  OTHER     @map("other")
}

enum InventoryUpdateType {
  RESERVE   @map("reserve")
  RELEASE   @map("release")
  STOCK_IN  @map("stock_in")
  STOCK_OUT @map("stock_out")
  RETURN    @map("return")
  DAMAGE    @map("damage")
}

enum ShoeGender {
  MALE   @map("male")
  FEMALE @map("female")
  UNISEX @map("unisex")
}
